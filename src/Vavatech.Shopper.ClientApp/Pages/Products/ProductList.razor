@page "/products"
@using Domain


<h3>ProductList</h3>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Color</th>
                <th>Price</th>
                <th>Size</th>
            </tr>
        </thead>

        <tbody>
            
            @foreach(var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Color</td>
                    <td>@product.Price</td>
                    <td>@product.Size</td>
                </tr>                
            }
        </tbody>

        <tfoot>
            <tr>
                <td>Count: @products.Count()</td>
            </tr>
        </tfoot>

    </table>
}

@code {
    private IEnumerable<Product> products;

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

}
